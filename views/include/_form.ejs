<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-dark">Vehical No</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Enter Vehicle Number">
        </div>
        <div class="form-group">
            <label for="Email" class="text-dark">Vehical Model</label>
            <input type="text" name="email" value="" placeholder="Enter Vehicle Model">
        </div>
        <div class="form-group">
            <label for="gender" class="text-dark">Vehical Type</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="type" value="2-wheeler">
                <label for="radio-2" class="radio-label">2-wheeler</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="type" value="4-wheeler">
                <label for="radio-3" class="radio-label">4-wheeler</label>
            </div>
        </div>

        <div class="form-group">
            <label for="Email" class="text-dark">Phone</label>
            <input type="text" name="phone" value="" placeholder="Enter Phone Number">
        </div>
        <div class="form-group">
            <label for="Email" class="text-dark">Check In</label>
            <input type="text" name="check" value="" id="currentDateTime">
        </div>
        <div class="form-group">
            <label for="Email" class="text-dark">Customer name</label>
            <input type="text" name="cname" value="">
        </div>


        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
<script>
    var today = new Date();
    var date = today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
    var time = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
    var dateTime = date + ' ' + time;
    document.getElementById("currentDateTime").value = dateTime;

</script>